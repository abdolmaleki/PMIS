@model PMIS.Models.User


@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سامانه مدیریت پروژه ها</title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/bootstrap.rtl.full.css" rel="stylesheet">

    <!--external css-->
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <form class="form-login" action="@Url.Action("Index")" method="post">
                <h2 class="form-login-heading">ورود به سیستم</h2>
                <div class="login-wrap">
                    @if (ViewBag.Message != null && ViewBag.Message != "")
                    {
                        <div>
                            <label style="color:red">@ViewBag.Message</label>
                        </div>
                        <br />
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div style="color:red">
                            @Html.ValidationSummary()
                        </div>
                        <br />
                    }
                    <input type="text" class="form-control" placeholder="نام کاربری" autofocus value="@Model.UserName" name="UserName">
                    <br>
                    <input type="password" class="form-control" placeholder="رمز عبور" value="@Model.Password" name="Password">

                    <label class="checkbox">
                        <span class="pull-right">
                            <a data-toggle="modal" href="#myModal"> فراموشی رمز</a>
                        </span>
                    </label>
                    <br />
                    <br />
                    <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> ورود</button>
                </div>


                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">فراموشی رمز</h4>
                            </div>
                            <div class="modal-body">
                                <p>در صورتی که رمز خود را فراموش کرده اید با شماره 77326189 تماس بگیرید</p>

                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">فهمیدم</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- modal -->

            </form>

        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script type="text/javascript" src="~/Scripts/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch("/assets/img/bg_page_login.jpg", { speed: 500 });
    </script>


</body>
</html>
